{
  "name": "runtime-validation",
  "version": "1.0.1",
  "description": "A lightweight runtime validation library for JavaScript data structures using TypeScript-like schemas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "validation",
    "runtime",
    "typescript",
    "schema",
    "type-checking"
  ],
  "author": "Ralph Kok",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ralphkok/runtime-validation.git"
  },
  "homepage": "https://github.com/ralphkok/runtime-validation#readme",
  "bugs": {
    "url": "https://github.com/ralphkok/runtime-validation/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
